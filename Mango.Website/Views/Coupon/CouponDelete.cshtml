@model CouponDto

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-black text-center">Delete Coupon</h1>
        <input asp-for=CouponId hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for=CouponCode class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-12 pb-3">
                <input asp-for=CouponCode disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for=DiscountAmount class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-12 pb-3">
                <input asp-for=DiscountAmount disabled type="number" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for=MinAmount class="form-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-12 pb-3">
                <input asp-for=MinAmount disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

            <div></div>
        </div>
    </div>
</form>
